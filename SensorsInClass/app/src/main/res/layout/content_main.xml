<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <com.example.sensorsinclass.FollowView
        android:id="@+id/circleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/med_text"
        android:text="@string/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16sp"
        />


    <TextView
        android:id="@+id/XTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x"
        android:textSize="@dimen/med_text"
        app:layout_constraintTop_toBottomOf="@id/Title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32sp"
        android:layout_marginStart="16sp"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/xVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/med_text"
        app:layout_constraintLeft_toRightOf="@id/XTitle"
        app:layout_constraintTop_toTopOf="@id/XTitle"
        android:layout_marginStart="8sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/YTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/y"
        android:textSize="@dimen/med_text"
        app:layout_constraintTop_toBottomOf="@id/XTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32sp"
        android:layout_marginStart="16sp"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/yVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/med_text"
        app:layout_constraintLeft_toRightOf="@id/YTitle"
        app:layout_constraintTop_toTopOf="@id/YTitle"
        android:layout_marginStart="8sp"
        android:visibility="invisible"
        />



    <TextView
        android:id="@+id/ZTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/z"
        android:textSize="@dimen/med_text"
        app:layout_constraintTop_toBottomOf="@id/YTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32sp"
        android:layout_marginStart="16sp"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/zVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/med_text"
        app:layout_constraintLeft_toRightOf="@id/ZTitle"
        app:layout_constraintTop_toTopOf="@id/ZTitle"
        android:layout_marginStart="8sp"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/accuracyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acc"
        android:textSize="@dimen/med_text"
        app:layout_constraintTop_toBottomOf="@id/ZTitle"
        app:layout_constraintLeft_toLeftOf="@id/ZTitle"
        android:layout_marginTop="32sp"
        android:visibility="invisible"
        />

</android.support.constraint.ConstraintLayout>